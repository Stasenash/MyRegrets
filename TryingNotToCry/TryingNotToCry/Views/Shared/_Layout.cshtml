<!DOCTYPE html>
<html>
<head background="http://static.hdw.eweb4.com/media/wallpapers_dl/1/31/308472-wavy-line.jpg">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
</head>
<body>
    <script type="text/javascript">
        function getRandomNum(min, max) {
            return Math.random() * (max - min) + min;
        }

        function showImageAndNya() {
            var mouse_x = y = 0;
            if (document.attachEvent != null) {
                mouse_x = window.event.clientX;
                mouse_y = window.event.clientY;
            } else if (!document.attachEvent && document.addEventListener) {
                mouse_x = event.clientX;
                mouse_y = event.clientY;
            }

            let elem = document.getElementById('loadingImage');
            elem.style.visibility = "visible";
            elem.style.width = "200px";
            elem.style.height = "270px"
            elem.style.position = "absolute";
            elem.style.left = mouse_x + "px";
            elem.style.top = mouse_y + "px";
            elem.style.transform = "rotate(" + Math.random() * 360 + "deg)";     


            var playlist = ['https://www.myinstants.com/media/sounds/chromeapps-16_12_2017-09.mp3', 'https://www.myinstants.com/media/sounds/nya-3-2.mp3', 'https://www.myinstants.com/media/sounds/nyam-breaking-fenrir-gbf.mp3'];
            var myAudio = new Audio();
            var i = getRandomNum(0, 3);
            myAudio.src = playlist[parseInt(i)];
            myAudio.play();
            //http://static.hdw.eweb4.com/media/wallpapers_dl/1/31/308472-wavy-line.jpg черный фон
            //http://s012.radikal.ru/i320/1605/41/abb9b522613e.png белый фон
        }
    </script>

    <img onclick="showImageAndNya()" src="@Url.Content("https://pp.userapi.com/c855216/v855216973/95c11/OYci0qayG7Y.jpg")" />
    <img id="loadingImage" src="https://pngicon.ru/file/uploads/anime-girls.png" style="visibility:hidden" />
    @RenderBody()
</body>
</html>
